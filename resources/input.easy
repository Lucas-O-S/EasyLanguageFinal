funcao decimal media(decimal a, decimal b, decimal c) {
    decimal resultado;
    resultado = (a + b + c) / 3;
    retorne resultado;
}

funcao decimal multiplicar(decimal x, decimal y) {
    decimal resultado;
    resultado = x * y;
    retorne resultado;
}
