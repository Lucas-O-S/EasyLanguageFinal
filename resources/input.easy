programa

    numero i, soma;
    texto nome;

    leia(nome);
    escreva(nome);

    soma = 0;

    escreva(soma);

    para (i de 1 <= 10 passo 2) faca {
        escreva(i);
        soma = soma + i;
    }

    para (i de 10 >= 0 passo 1) faca {
        escreva(i);
    }

    enquanto (soma < 20 e soma <15) {
        soma = soma + 2;
        escreva(soma);
    }

fimprog;
